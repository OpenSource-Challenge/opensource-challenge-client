{{#if this.contribution}}
  {{#liquid-bind this.contribution use="toUp" as |contribution|}}
    <PartyPopper />
    {{#link-to "day" contribution.date}}
      Neuester Beitrag von {{contribution.user.name}}:
      {{contribution.title}}
    {{/link-to}}
    <PartyPopper />
  {{/liquid-bind}}
{{else}}
  <PartyPopper class="invisible" />
{{/if}}
