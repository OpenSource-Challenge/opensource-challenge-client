{{#basic-dropdown as |dropdown|}}
  <input
    type="text"
    id="ember-basic-dropdown-trigger-{{dropdown.uniqueId}}"
    onclick={{dropdown.actions.toggle}}
    value={{if this.selected (moment-format this.selected "YYYY-MM-DD")}}
    readonly
  >

  {{#dropdown.content class="datepicker-dropdown"}}
    {{#power-calendar class="datepicker"
      center=this.center
      selected=this.selected
      onSelect=(pipe-action
        (action this.change value="moment")
        dropdown.actions.close
      )
    as |calendar|}}
      {{calendar.nav}}
      {{calendar.days}}
    {{/power-calendar}}
  {{/dropdown.content}}
{{/basic-dropdown}}
