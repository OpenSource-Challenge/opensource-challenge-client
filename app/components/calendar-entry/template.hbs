{{#with this.item.user as |user|}}
  <header>
    {{#link-to "contributors.profile" user class="avatar-wrapper"}}
      <img class="avatar" src={{this.picture}} alt="">
      <div class="username">{{user.name}}</div>
    {{/link-to}}
  </header>
{{/with}}
<div class="layout-column contribution-content">
  {{#with this.item.link as |link|}}
    <a class="contribution-link" href={{link}}>{{link}}</a>
  {{/with}}
  <section class="justify-mobile">
    <div class="title">
      {{#with this.item.title as |title|}}
        <h2>{{title}}</h2>
      {{/with}}
      {{#if (can "edit contribution" this.item)}}
        {{#link-to "edit-contribution" this.item}}
          {{fa-icon "pencil"}}
        {{/link-to}}
      {{/if}}
    </div>

    {{~contribution-description description=this.item.description~}}
  </section>
</div>
